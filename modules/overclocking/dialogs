# Shows the overclocking warning
function showOCWarningDlg() {
	wrapTxtFn "$_OCWARNING"
	centerTxtFn "$WRAPPEDTXT"
	showMsgDlg "$WRAPPEDTXT" $HEIGHT
}

function showOCSettingsDlg() {
	createTableFn "radio"\
	"   #,\Zb$_OCNAME,\ZbARM,\ZbCORE,\ZbSDRAM,\ZbOvervolt"\
	"1,\Z2None,\Z2700Mhz,\Z2250Mhz,\Z2400Mhz,\Z20,${STATUS[0]}"\
	"2,\Z2Modest,\Z2800Mhz,\Z2300Mhz,\Z2400Mhz,\Z20,${STATUS[1]}"\
	"3,\Z2XBian,\Z2840Mhz,\Z2375Mhz,\Z2400Mhz,\Z20,${STATUS[2]}"\
	"4,\ZnMedium,\Zn900Mhz,\Zn333Mhz,\Zn450Mhz,\Zn2,${STATUS[3]}"\
	"5,\ZnHigh,\Zn950Mhz,\Zn450Mhz,\Zn450Mhz,\Zn6,${STATUS[4]}"\
	"6,\Z1Turbo,\Z11000Mhz,\Z1500Mhz,\Z1500Mhz,\Z16,${STATUS[5]}"\
	"7,\Z1$_OCCUSTOM,\Z1...,\Z1...,\Z1...,\Z1...,${STATUS[6]}"
	centerTxtFn "$HEADER" $(($DEFAULTWIDTH+15))
	showRadioDlg "$CENTEREDTXT" "$ROWS" 7 16	
}

function showNoOCChangeDlg() {
	wrapTxtFn "$_OCNOTCHANGED"
	centerTxtFn "$WRAPPEDTXT"
	valignTxtFn "$CENTEREDTXT"
	showMsgDlg "$ALIGNEDTXT" $HEIGHT
}

function showUpdatedOCDlg() {
	wrapTxtFn "$_OCCHANGED"
	centerTxtFn "$WRAPPEDTXT"
	valignTxtFn "$CENTEREDTXT"
	showMsgDlg "$ALIGNEDTXT" $HEIGHT
}