#|------------------------------------|
#|          Global variables          |
#|------------------------------------|

# The arguments this module accepts
ARGUMENTS=(info);

#|------------------------------------|
#|          Include files             |
#|------------------------------------|

source $BASEPATH/modules/resizesd/functions
if [ $GUIMODE -eq 1 ]; then
	source $BASEPATH/modules/resizesd/dialogs
fi

#|------------------------------------|
#|           Main program             |
#|------------------------------------|

# Executes the GUI version of this module
function showGUIFn() {
			showSDResizeNotNeededDlg;
}

# Executes the command line version of this module
#  $1 Argument [String]
# Returns
#  *Update [Integer]
#  - 1: Success
#  - 0: Failed
#  check
#  -1: Already resized
#  resize
#  -1: Already resized
#  -2: Wrong number of arguments
function showCMDFn() {
	case $1 in
		check)
			if [ $# -eq 1 ]; then
				checkNeedToResizeFn;
				if [ $? -eq 1 ]; then
					echo 1;
				else
					echo -1;
				fi
			else
				echo -2;
			fi
		;;
	esac;
}
