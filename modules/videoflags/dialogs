function showVideoFlagsDlg() {
	MENU=();
	
	X=0;
	for FLAG in ${VIDEOFLAGS[@]}; do
		X=$(($X+1));
		_LABEL="_"$(echo $FLAG | sed -e 's/_//g' | tr "[:lower:]" "[:upper:]");
		if [ ! -z ${!_LABEL} ]; then
			LABEL=${!_LABEL};
		else
			LABEL=$FLAG;
		fi
		
		if [ ${VIDEOSETTINGS[$FLAG]} -eq 0 ]; then
			MENU+=($X",\Zn"$LABEL",off");
		else
			MENU+=($X",\Zn"$LABEL",on");
		fi
	done;
	createTableFn "radio" \
	"#,\Zb$_VIDEOFLAGS" \
	"${MENU[@]}"
	
	if [ ${#HEADER} -ge 52 ]; then
		centerTxtFn "$HEADER" $(($DEFAULTWIDTH+12));
	else
		centerTxtFn "$HEADER" $(($DEFAULTWIDTH+10));
	fi
	showChecklistDlg "$CENTEREDTXT" "$ROWS" ${#MENU[@]} $((${#MENU[@]}+9))
}

function showVideoFlagsSuccessDlg() {
	wrapTxtFn "$_VIDEOFLAGSSUCCESS"
	centerTxtFn "$WRAPPEDTXT"
	valignTxtFn "$CENTEREDTXT"
	showMsgDlg "$ALIGNEDTXT"
}